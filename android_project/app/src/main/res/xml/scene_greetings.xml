<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/ivTopWave"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="3dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGreetingSubtitle"
            app:srcCompat="@drawable/wave_shape_swiped" />

        <Constraint
            android:id="@+id/ivBottomWave"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="3dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/cvGetStarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/wave_shape" />

        <Constraint
            android:id="@+id/clGreetingMiddle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/orange_500"
            app:layout_constraintBottom_toTopOf="@id/cvGetStarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGreetingSubtitle" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/ivTopWave"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:elevation="3dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGreetingSubtitle"
            app:srcCompat="@drawable/wave_shape_swiped" />

        <Constraint
            android:id="@+id/ivBottomWave"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:elevation="3dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@id/cvGetStarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/wave_shape" />

        <Constraint
            android:id="@+id/clGreetingMiddle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/orange_600"
            app:layout_constraintBottom_toTopOf="@id/cvGetStarted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGreetingSubtitle" />
    </ConstraintSet>

    <Transition
        android:id="@+id/transition"
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@id/start"
        app:duration="700" />
</MotionScene>