<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlChooseTable"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/view_click_background">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvChooseTableNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start"
        android:layout_marginHorizontal="20dp"
        android:layout_toStartOf="@id/ivChooseTableSelect"
        android:paddingVertical="10dp"
        android:textColor="@color/black_800"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Mesa 20" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivChooseTableSelect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:padding="6dp"
        android:tint="@color/orange_500"
        app:srcCompat="@drawable/ic_arrow_right" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvChooseTableNumber"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="34dp"
        android:background="@color/black_50" />
</RelativeLayout>